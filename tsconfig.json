{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ],
            
            "@/access/*": ["src/data_access/*"],
            "@/routers/*": ["src/routers/*"], 
            "@/models/*": ["src/server/models/*"],
            "@/schema": ["src/schema.ts"],
            "@/types": ["src/types"], 
            "@/config": ["src/config"]
        },
    },
    
    "include": [
        "src/**/*"
    ]
}