{
    "compileOnSave": false,
    "exclude": [
        "node_modules",
        "src/**/*.spec.js",
        "src/**/*.test.js"
    ],
    "compilerOptions": {
        "sourceMap": true,
        "declaration": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "types": ["node", "express"],
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2016",
            "ESNext.BigInt",
            "dom",
            "esnext.asynciterable"
        ],
        "baseUrl": "src", 
        "paths": {
            "@/routers/*" :["routers/*"],
            "@/models/*" :["server/models/*"],
            "@/migrations/*" :["server/migrations/*"],
            "@/controllers/*" :["server/controllers/*"],
            "@/controllers" :["server/controllers/"],
            "@/config/*" :["server/config/*"],
            "@/types": ["types"],
            "@/schema": ["schema"],
            "@/config" :["config"],
            "@/tools": ["tools"]
        }
    }
}